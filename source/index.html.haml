:javascript
  $("#slow-button").on("click", function() {
    SlowCSS.scale(2);
    $("#sample-modal").modal();
    node = $("<div class='spinner'></div>");
    $("#spinners").append(node);
    return false;
  });

  $("#fast-button").on("click", function() {
    SlowCSS.scale(0.5);
    $("#sample-modal").modal();
    node = $("<div class='spinner'></div>");
    $("#spinners").append(node);
    return false;
  });
